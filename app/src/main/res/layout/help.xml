            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
Contact Us:-"
                android:textColor="#0080FF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@+id/text1"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
Phone:01816167355."

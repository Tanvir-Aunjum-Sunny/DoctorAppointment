                android:textColor="#0080FF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@+id/text3"/>

            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="

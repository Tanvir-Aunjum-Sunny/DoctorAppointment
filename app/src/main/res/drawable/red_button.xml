<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#515658" android:centerColor="#000000" android:endColor="#515658" />
            <corners android:radius="20dp"/>
            <stroke android:width="5dp" android:color="#74ADCB" />
            <padding  android:left="15dp" android:top="2dp" android:right="15dp" android:bottom="2dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape >
            <gradient android:startColor="#2C2C2C" android:centerColor="#2C2C2C" android:endColor="#2C2C2C" />
            <corners android:radius="20dp"/>
            <stroke android:width="2dp" android:color="#79B1D2" />
            <padding android:left="15dp" android:top="2dp" android:right="15dp" android:bottom="2dp"/>
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#2b2b2b"
                android:endColor="#2b2b2b"></gradient>
            <corners android:radius="80dp"></corners>
            <stroke android:width="2dp" android:color="#3495CF"></stroke>
            <padding
                android:top="5dp"
                android:left="10dp"
                android:bottom="5dp"
                android:right="10dp"
                ></padding>

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#2b2b2b"
                android:endColor="#2b2b2b"
                android:centerColor="#000000"></gradient>
            <corners android:radius="80dp"></corners>
            <stroke android:width="8dp" android:color="#3495CF"></stroke>
            <padding
                android:top="5dp"
                android:left="10dp"
                android:bottom="5dp"
                android:right="10dp"
                ></padding>
        </shape>
    </item>
</selector>